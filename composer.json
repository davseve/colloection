{
    "name": "davids/collection",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Davids\\Collection\\": "src/"
        }
    },
    "authors": [
        {
            "name": "David Seveloff",
            "email": "davids@elementor.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10",
        "thor-juhasz/phpunit-coverage-check": "^0.3.0"
    },
    "scripts": {
        "coverage": "composer run coverage:test && composer run coverage:check",
        "coverage:test": "phpdbg -qrr vendor/phpunit/phpunit/phpunit --coverage-clover coverage-report/clover.xml",
        "coverage:check": "phpunit-coverage-check -t 50 coverage-report/clover.xml"
    }
}
